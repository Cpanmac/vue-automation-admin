<template>
    <div>
        <el-form ref="form" :model="form" :rules="rules" label-width="120px" label-suffix="：">
            <el-form-item label="名称" prop="name">
                <el-input v-model="form.name" placeholder="请输入名称" />
            </el-form-item>
        </el-form>
    </div>
</template>

<script>
export default {
    props: {
        id: {
            type: [Number, String],
            default: ''
        }
    },
    data() {
        return {
            form: {
                id: '',
                name: ''
            },
            rules: {
                name: [
                    { required: true, message: '请输入名称', trigger: 'blur' }
                ]
            }
        }
    },
    watch: {
        id: {
            handler(val) {
                this.form.id = val
            },
            immediate: true
        },
        'form.id': {
            handler(val) {
                if (val != '') {
                    this.getInfo()
                }
            },
            immediate: true
        }
    },
    created() {},
    mounted() {},
    methods: {
        getInfo() {
            this.$api.get('api/info', {
                params: {
                    id: this.form.id
                }
            }).then(() => {})
        },
        submit(callback) {
            if (this.form.id == '') {
                this.$refs['form'].validate(valid => {
                    if (valid) {
                        this.$api.post('api/new', this.form).then(() => {
                            this.$message.success({
                                message: '新增成功',
                                center: true
                            })
                            callback && callback()
                        })
                    }
                })
            } else {
                this.$refs['form'].validate(valid => {
                    if (valid) {
                        this.$api.post('api/edit', Object.assign(this.form, {
                            id: this.form.id
                        })).then(() => {
                            this.$message.success({
                                message: '编辑成功',
                                center: true
                            })
                            callback && callback()
                        })
                    }
                })
            }
        },
        reset() {
            this.$refs['form'].resetFields()
        }
    }
}
</script>

