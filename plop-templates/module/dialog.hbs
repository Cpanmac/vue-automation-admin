<template>
    <div>
        <el-dialog :visible.sync="visible" :title="id == '' ? '新增{{ cname }}' : '编辑{{ cname }}'" width="600px" :close-on-click-modal="false">
            <DetailForm :id="id" ref="form" />
            <div slot="footer">
                <el-button @click="onCancel">取 消</el-button>
                <el-button type="primary" @click="onSubmit">确 定</el-button>
            </div>
        </el-dialog>
    </div>
</template>

<script>
import DetailForm from '../DetailForm/index'

export default {
    components: {
        DetailForm
    },
    props: {
        visible: {
            type: Boolean,
            default: false
        },
        id: {
            type: [Number, String],
            default: ''
        }
    },
    methods: {
        onSubmit() {
            // submit() 为组件内部方法
            this.$refs['form'].submit(() => {
                this.$emit('success')
                this.onCancel()
            })
        },
        onCancel() {
            // reset() 为组件内部方法
            this.$refs['form'].reset()
            this.$emit('update:visible', false)
            this.$emit('update:id', '')
        }
    }
}
</script>
